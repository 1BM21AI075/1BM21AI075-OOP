class Songs:
    def __init__(self, lyrics):
        self.lyrics = lyrics

    def sing_me_a_song(self):
        for line in self.lyrics:
            print(line)

song_lyrics = [
    "may god bless you,",
    "have a sunshine on you",
    "happy birthday to you"
]

song_instance = Songs(song_lyrics)

song_instance.sing_me_a_song()
